@model IEnumerable<E_Commerce.MvcWebUI.Entity.Category>
@{
    var selectedCategory = Url.RequestContext.RouteData.Values["id"];
}


<div class="list-group">
    <a href="/Home/List" class="list-group-item list-group-item-action">All products</a>
    @foreach (var category in Model)
    {
        <a href="/Home/List/@category.Id" class="list-group-item list-group-item-action @(selectedCategory==null?"":category.Id==int.Parse(selectedCategory.ToString())?"active":"")">
            <i class="fa fa-angle-double-right" aria-hidden="true"></i>
            @category.Name
        </a>
    }
</div>

