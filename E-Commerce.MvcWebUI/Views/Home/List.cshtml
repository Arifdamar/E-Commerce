@using E_Commerce.MvcWebUI.Models
@model IEnumerable<ProductModel>
@{
    ViewBag.Title = "List";
}
<div class="mx-5 my-3">
    <div class="row">
        <div class="col-md-3">
            @Html.Action("_GetCategories", "Home")
        </div>

        <div class="col-md-9">

            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-smile fa-5x"></i>
                    Wow, Such Empty!
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    @(Model.Count() == 1 ? Model.Count() + " product found." : Model.Count() + " products found.")
                </div>
            }

            @Html.Partial("_ProductList", Model)
        </div>
    </div>
</div>

