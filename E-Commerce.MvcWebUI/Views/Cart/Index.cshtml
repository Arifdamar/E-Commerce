@model E_Commerce.MvcWebUI.Models.Cart
@{
    ViewBag.Title = "Index";
}

<div class="container pb-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Shopping Cart</h2>
            <hr />

            @if (Model.cartLines.Count() == 0)
            {
                <div class="alert alert-info" role="alert">
                    Your cart is empty.
                </div>
                <div class="text-center">
                    <a href="/Home/List" class="btn btn-info">
                        <i class="fa fa-angle-double-left" aria-hidden="true"></i>
                        Go Shopping
                    </a>
                </div>
            }
            else
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Quantity</th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Sub Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.cartLines)
                        {
                            <tr>
                                <td>
                                    <img src="~/Upload/@item.Product.Image" style="width:100px" />
                                </td>
                                <td>@item.Quantity</td>
                                <td>
                                    <a href="/Home/Details/@item.Product.Id">@item.Product.Name</a>
                                </td>
                                <td>$@item.Product.Price</td>
                                <td>@((item.Product.Price * item.Quantity).ToString("c"))</td>
                                <td>
                                    @using (Html.BeginForm("RemoveFromCart", "Cart"))
                                    {
                                        @Html.Hidden("Id", item.Product.Id)
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>

                    <tfoot>
                        <tr>
                            <td colspan="4"></td>
                            <td>
                                Total:@Model.TotalPrice().ToString("c")
                            </td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
                <div class="text-center">
                    <a href="/Home/List" class="btn btn-info">
                        <i class="fa fa-angle-double-left" aria-hidden="true"></i>
                        Keep Shopping
                    </a>
                    <a href="/Cart/Checkout" class="btn btn-success">
                        <i class="fa fa-check" aria-hidden="true"></i>
                        Proceed to checkout
                    </a>
                </div>
            }




        </div>
    </div>
</div>

